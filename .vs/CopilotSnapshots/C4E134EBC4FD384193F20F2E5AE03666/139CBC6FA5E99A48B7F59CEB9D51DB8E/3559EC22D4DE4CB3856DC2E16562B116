                <div class="sidebar">
                    <h5 class="text-light mb-3">
                        <i class="fas fa-list"></i> Danh sách tập
                    </h5>

                    @if (Model != null && Model.Count > 1)
                    {
                        var servers = Model.GroupBy(e => e.Server.ServerName).ToList();
                        
                        @foreach (var serverGroup in servers)
                        {
                            var serverId = $"server_{serverGroup.Key.Replace(" ", "_")}";
                            <div class="episode-item mb-2">
                                <!-- Server Collapse Trigger -->
                                <div class="d-flex justify-content-between align-items-center"
                                     data-bs-toggle="collapse"
                                     data-bs-target="#@serverId"
                                     aria-expanded="false"
                                     style="cursor:pointer;">
                                    <span><i class="fas fa-server me-2"></i>@serverGroup.Key</span>
                                    <i class="fas fa-chevron-down"></i>
                                </div>

                                <!-- Server Episodes List -->
                                <div class="collapse mt-2" id="@serverId">
                                    <div class="list-group">
                                        @foreach (var episode in serverGroup)
                                        {
                                            <button class="list-group-item list-group-item-action bg-dark text-light border-secondary episode-button"
                                                    onclick="selectEpisode('@episode.Id', '@episode.Name', '@episode.LinkEmbed')"
                                                    data-episode-id="@episode.Id">
                                                @episode.Name
                                                <small class="text-muted float-end">HD</small>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        <script>
                            function debounce(fn, delay) {
                                let timeout;
                                return function (...args) {
                                    clearTimeout(timeout);
                                    timeout = setTimeout(() => fn.apply(this, args), delay);
                                };
                            }

                            function handleSelectEpisode(id, name, url) {
                                const iframe = document.querySelector('#Film-player iframe');
                                if (iframe) {
                                    iframe.src = url;
                                }
                                document.getElementById("Episode").textContent = name;
                                
                                // Update active state
                                document.querySelectorAll('.episode-button').forEach(btn => {
                                    btn.classList.remove('active');
                                    if (btn.dataset.episodeId === id) {
                                        btn.classList.add('active');
                                    }
                                });
                            }
                            
                            const selectEpisode = debounce(handleSelectEpisode, 300);
                        </script>
                    }
                    else
                    {
                        <div class="episode-item active">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Tập Full</span>
                                <small class="text-muted">HD</small>
                            </div>
                        </div>
                    }

