@model List<Account>
@{
    Layout = null;
    var users = Model.Take(3).ToList();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix - Who's watching?</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #141414;
            color: white;
            font-family: 'Helvetica Neue', Arial, sans-serif;
            min-height: 100vh;
            margin: 0;
        }

        .netflix-logo {
            color: #e50914;
            font-size: 2.5rem;
            font-weight: bold;
            letter-spacing: -0.05em;
        }

        .main-title {
            font-size: 3.5rem;
            font-weight: 400;
            color: white;
            margin-bottom: 2rem;
        }

        .profile-container {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .profile-item {
            text-align: center;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .profile-item:hover {
                transform: scale(1.05);
            }

        .profile-avatar {
            width: 150px;
            height: 150px;
            border-radius: 8px;
            margin-bottom: 1rem;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .profile-avatar:hover {
                border: 3px solid white;
            }

        .avatar-face {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
        }

        .avatar-eyes {
            display: flex;
            gap: 20px;
            margin-bottom: 10px;
            justify-content: center;
        }

        .eye {
            width: 12px;
            height: 12px;
            background-color: #000;
            border-radius: 50%;
            position: relative;
        }

            .eye::after {
                content: '';
                position: absolute;
                top: 2px;
                left: 2px;
                width: 3px;
                height: 3px;
                background-color: white;
                border-radius: 50%;
            }

        .avatar-mouth {
            width: 30px;
            height: 15px;
            border: 2px solid #000;
            border-top: none;
            border-radius: 0 0 30px 30px;
            margin: 0 auto;
        }

        .profile-name {
            font-size: 1.2rem;
            color: #808080;
            font-weight: 400;
        }

        /* Avatar backgrounds */
        .scarlett {
            background: linear-gradient(45deg, #ff4444, #cc1111);
            /*   background-image: radial-gradient(circle at 20% 30%, rgba(255,255,255,0.1) 1px, transparent 1px), radial-gradient(circle at 80% 70%, rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(45deg, transparent 40%, rgba(255,255,255,0.05) 50%, transparent 60%); */
        }

        .sunny {
            background: linear-gradient(45deg, #ffaa00, #ff8800);
            /*  background-image: radial-gradient(circle at 30% 20%, rgba(255,255,255,0.1) 1px, transparent 1px), radial-gradient(circle at 70% 80%, rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(135deg, transparent 40%, rgba(255,255,255,0.05) 50%, transparent 60%); */
        }

        .robin {
            background: linear-gradient(45deg, #00aaff, #0088cc);
            /*             background-image: radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 1px, transparent 1px), radial-gradient(circle at 75% 75%, rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(45deg, transparent 40%, rgba(255,255,255,0.05) 50%, transparent 60%);
         */
        }

        .dusty {
            background: linear-gradient(45deg, #888888, #666666);
            /*  background-image: radial-gradient(circle at 40% 30%, rgba(255,255,255,0.1) 1px, transparent 1px), radial-gradient(circle at 60% 70%, rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(135deg, transparent 40%, rgba(255,255,255,0.05) 50%, transparent 60%); */
        }

        @@media (max-width: 768px) {
            .main-title {
                font-size: 2.5rem;
            }

            .profile-avatar {
                width: 120px;
                height: 120px;
            }

            .profile-container {
                gap: 1.5rem;
            }
        }

        @@media (max-width: 576px) {
            .main-title {
                font-size: 2rem;
            }

            .profile-avatar {
                width: 100px;
                height: 100px;
            }

            .profile-container {
                gap: 1rem;
            }

            .netflix-logo {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Netflix Logo -->
        <div class="row">
            <div class="col-12">
                <div class="netflix-logo p-4">
                    Aris
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
            <div class="col-12 text-center">
                <h1 class="main-title mb-5">Who's watching?</h1>
                <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                    <div class="profile-container">
                        <div class="profile-item">
                            <div class="profile-avatar scarlett">
                                <div class="avatar-face">
                                    <div class="avatar-eyes">
                                        <div class="eye"></div>
                                        <div class="eye"></div>
                                    </div>
                                    <div class="avatar-mouth"></div>
                                </div>
                            </div>
                            <div class="profile-name">@users[0].UserName</div>
                        </div>
                </a>
                <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                    <div class="profile-item">
                        <div class="profile-avatar sunny">
                            <div class="avatar-face">
                                <div class="avatar-eyes">
                                    <div class="eye"></div>
                                    <div class="eye"></div>
                                </div>
                                <div class="avatar-mouth"></div>
                            </div>
                        </div>
                        <div class="profile-name">@users[1].UserName</div>
                    </div>
                </a>
                <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                    <div class="profile-item">
                        <div class="profile-avatar robin">
                            <div class="avatar-face">
                                <div class="avatar-eyes">
                                    <div class="eye"></div>
                                    <div class="eye"></div>
                                </div>
                                <div class="avatar-mouth"></div>
                            </div>
                        </div>
                        <div class="profile-name">@users[2].UserName</div>
                    </div>
                </a>
               @*  <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                    <div class="profile-item">
                        <div class="profile-avatar dusty">
                            <div class="avatar-face">
                                <div class="avatar-eyes">
                                    <div class="eye"></div>
                                    <div class="eye"></div>
                                </div>
                                <div class="avatar-mouth"></div>
                            </div>
                        </div>
                        <div class="profile-name">@users[3].UserName</div>
                    </div>
                </a> *@
            </div>
        </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add click functionality to profiles
        document.querySelectorAll('.profile-item').forEach(profile => {
            profile.addEventListener('click', function() {
                const profileName = this.querySelector('.profile-name').textContent;
                alert(`Welcome back, ${profileName}!`);
            });
        });
    </script>
</body>
</html>