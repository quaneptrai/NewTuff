@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix - Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background: #000;
            color: #fff;
            overflow-x: hidden;
        }

        .background-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.6);
            z-index: 1;
        }

        .movie-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/f562aaf4-5dbb-4603-a32b-6ef6c2230136/dh0w8qv-9d8ee6b2-b41a-4681-ab9b-8a227560dc75.jpg/v1/fill/w_1192,h_670,q_70,strp/the_netflix_login_background__canada__2024___by_logofeveryt_dh0w8qv-pre.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..LOYKSxIDqfPwWHR0SSJ-ugGQ6bECF0yO6Cmc0F26CQs');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: 0;
            opacity: 1;
        }

        .netflix-logo {
            color: rgb(229, 9, 20);
            font-size: 2.5rem;
            font-weight: bold;
            letter-spacing: -2px;
            position: relative;
            z-index: 10;
        }

        .main-container {
            position: relative;
            z-index: 10;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .sign-in-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .sign-in-form {
            display:flex;
            flex-direction:column;
            justify-content:center;
            background: rgba(0, 0, 0, 0.75);
            padding: 3rem 2.5rem;
            border-radius: 4px;
            width: 100%;
            max-width: 450px;
            backdrop-filter: blur(10px);
        }

        .form-control {
            background: white;
            border: none;
            color: black;
            padding: 1rem;
            border-radius: 4px;
            margin-bottom: 1rem;
        }

            .form-control:focus {
                background: white;
                border-color: #fff;
                box-shadow: none;
                color: black;
            }

            .form-control::placeholder {
                color: #8c8c8c;
            }

        .btn-netflix {
            background: #e50914;
            border: none;
            color: #fff;
            padding: 1rem;
            border-radius: 4px;
            font-weight: bold;
            width: 100%;
            margin-bottom: 1rem;
        }

            .btn-netflix:hover {
                background: #f40612;
                color: #fff;
            }

        .btn-code {
            background: #333;
            border: none;
            color: #fff;
            padding: 1rem;
            border-radius: 4px;
            width: 100%;
            margin-bottom: 1rem;
        }

            .btn-code:hover {
                background: #454545;
                color: #fff;
            }

        .divider {
            text-align: center;
            margin: 1rem 0;
            color: #737373;
        }

        .forgot-password {
            color: #737373;
            text-decoration: none;
            font-size: 0.9rem;
        }

            .forgot-password:hover {
                color: #fff;
                text-decoration: underline;
            }

        .remember-me {
            margin: 1rem 0;
        }

            .remember-me input[type="checkbox"] {
                margin-right: 0.5rem;
            }

        .sign-up-text {
            color: #737373;
            margin-top: 1rem;
        }

        .sign-up-link {
            color: #fff;
            text-decoration: none;
        }

            .sign-up-link:hover {
                color: #fff;
                text-decoration: underline;
            }

        .recaptcha-text {
            font-size: 0.8rem;
            color: #737373;
            margin-top: 1rem;
            line-height: 1.4;
        }

        .recaptcha-link {
            color: #0073e6;
            text-decoration: none;
        }

            .recaptcha-link:hover {
                text-decoration: underline;
            }

        .footer {
            text-align: center;
            padding: 2rem;
            position: relative;
            z-index: 10;
        }

            .footer a {
                color: #737373;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 768px) {
            .sign-in-form {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }

            .netflix-logo {
                font-size: 2rem;
            }
        }

        .search-container {
            position: relative;
            color: white;
            display: flex;
            align-items: center;
            padding: 0 10px;
        }
        .Send-Button{
            border:none;
            background-color:transparent;
            color:black;
        }

        .clicked{
            color:gray;
        }
    </style>
</head>
<body>
    <!-- Background Image -->
    <div class="movie-background"></div>
    <!-- Overlay -->
    <div class="background-overlay"></div>


    <!-- Main Container -->
    <div class="main-container">
        <!-- Header -->
        <header class=" container container-fluid py-3">
            <div class="row">
                <div class="col">
                    <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                        <div class="netflix-logo">Aris</div>
                    </a>
                </div>
            </div>
        </header>

        <!-- Sign In Form -->
        <div class="sign-in-container">
            <div class="sign-in-form">
                <h1 class="h2 mb-5">Forgot Password</h1>
                <form asp-controller="User" asp-action="SendEmail" method="post" style="position: relative;">
                    <input type="email" name="email" class="form-control pe-5" placeholder="Email address or mobile number" required />
                    <button type="submit" id="SendButton" class="Send-Button" style="position: absolute; top: 50%; right: 15px; transform: translateY(-70%);">
                        Send
                    </button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>